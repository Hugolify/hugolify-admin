{{- $specificFields := .fields -}}
{{- $specific := false -}}
{{- with .block -}}
  {{- $specific = index site.Params.admin.blocks . -}}
{{- end -}}
{{- with .field -}}
  {{- $specific = index site.Params.admin.fields . -}}
{{- end -}}
{{- with $specific -}}
  {{- with .fields -}}
    {{- $specificFields = . -}}
  {{- end -}}
{{- end -}}
{{- return $specificFields -}}
